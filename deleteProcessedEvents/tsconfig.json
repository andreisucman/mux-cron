{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "target": "ES2022",
    "noEmit": false,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"],
      "@helpers/*": ["helpers/*"]
    }
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", "./node_modules", "**/*.test.js", "dist"]
}
